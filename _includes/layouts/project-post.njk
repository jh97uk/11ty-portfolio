--- 
layout: "layouts/base.njk"
---
<section class="split">
    <article>
        <header>
            <a href="#">
                <h1>{{title}}</h1>
            </a>
            <span>
                <time datetime="{{date}}">{{date | postDate}}</time>
            </span>
        </header>
        {{content | safe}}
    </article>
    <div class="card info">
        <b>Languages:</b> {{languages}}<br>
        <b>Technologies:</b> {{technologies}}<br>
        <a href="{{url}}" style="font-weight:bold;">Link</a>
    </div>
</section>